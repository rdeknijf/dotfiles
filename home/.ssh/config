# Reshift AWS bastion
Host 10.100.* *.kieskeurighost.nl
  User rdeknijf
  StrictHostKeyChecking no

# Hosts for accessing the terrible-dev VPC
# The private subnet for operations cluster is 10.0.2.0/24
# Hosts in this subnet are accessible through the bastion host
Host 10.0.2.*
    ProxyCommand ssh -W %h:%p sanoma-test-bastion
    StrictHostKeyChecking no

Host sanoma-test-bastion
    Hostname 52.212.129.22
    User terrible
    IdentityFile ~/.ssh/id_rsa_terrible
    ForwardAgent yes
    ControlMaster auto
    ControlPath ~/.ssh/ansible-%r@%h:%p
    ControlPersist 30m

Host *
    User r.deknijf
    ServerAliveInterval 240
    ForwardAgent yes
