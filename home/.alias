dkp() {
  if [ ! -f .dockerignore ]; then
    echo "Warning, .dockerignore file is missing."
    read -p "Proceed anyway?"
  fi

  docker build -t $1 .
  docker push $1
}

drun() {
    docker run -it --rm "$1" /bin/bash
    echo "$1"
}



